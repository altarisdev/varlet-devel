<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
    <!--
        https://docs.microsoft.com/en-us/dotnet/core/tools/csproj
        https://weblog.west-wind.com/posts/2019/Apr/30/NET-Core-30-SDK-Projects-Controlling-Output-Folders-and-Content
    -->
    <PropertyGroup>
        <Title>Varlet</Title>
        <FileVersion>1.0.0.0</FileVersion>
        <AssemblyVersion>1.0.0</AssemblyVersion>
        <Copyright>Copyright (c) 2019</Copyright>
        <Description>Varlet Services Controller</Description>
        <PackageDescription>Minimalism web development stack</PackageDescription>
        <PackageLicenseUrl>https://choosealicense.com/licenses/apache-2.0/</PackageLicenseUrl>
        <PackageProjectUrl>https://github.com/riipandi/varlet</PackageProjectUrl>
        <ApplicationIcon>..\Resources\appIcon.ico</ApplicationIcon>
        <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <AssemblyName>VarletUi</AssemblyName>
        <Authors>Aris Ripandi</Authors>
        <Platforms>AnyCPU</Platforms>
        <OutputType>WinExe</OutputType>
        <UseWPF>true</UseWPF>
    </PropertyGroup>

    <PropertyGroup>
        <OutDir>..\..\_dst64\utils\</OutDir>
        <Configurations>Debug;Release</Configurations>
        <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
        <TargetLatestRuntimePatch>true</TargetLatestRuntimePatch>
        <TrimUnusedDependencies>true</TrimUnusedDependencies>
        <LangVersion>8.0</LangVersion>
    </PropertyGroup>

    <PropertyGroup>
        <PublishTrimmed>true</PublishTrimmed>
        <PublishReadyToRun>true</PublishReadyToRun>
        <PublishSingleFile>false</PublishSingleFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <Prefer32bit>true</Prefer32bit>
      <DebugType>pdbonly</DebugType>
      <WarningLevel>3</WarningLevel>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <PlatformTarget>x64</PlatformTarget>
      <DebugSymbols>false</DebugSymbols>
      <WarningLevel>1</WarningLevel>
      <DebugType>none</DebugType>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
      <PackageReference Include="Serilog" Version="2.9.0" />
      <PackageReference Include="Serilog.Sinks.File" Version="4.1.0" />
    </ItemGroup>

    <Import Project="..\Variety\Variety.projitems" Label="Shared" />

