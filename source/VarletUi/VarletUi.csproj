<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <UseWindowsForms>true</UseWindowsForms>
    <AssemblyName>VarletUi</AssemblyName>
    <ApplicationIcon>varlet.ico</ApplicationIcon>
    <Win32Resource />
    <PackageProjectUrl>https://github.com/riipandi/varlet</PackageProjectUrl>
    <Copyright>Copyright (c) 2019 Aris Ripandi</Copyright>
    <Company>Ruhay Creative Studio</Company>
    <Authors>Aris Ripandi</Authors>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <BaseIntermediateOutputPath>..\_build\obj\</BaseIntermediateOutputPath>
    <OutputPath>..\_build\debug</OutputPath>
    <Prefer32Bit>true</Prefer32Bit>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <BaseIntermediateOutputPath>..\_build\obj\</BaseIntermediateOutputPath>
    <OutputPath>..\_build\release</OutputPath>
    <PlatformTarget>x64</PlatformTarget>
    <Prefer32Bit>false</Prefer32Bit>
    <GenerateSerializationAssemblies>Off</GenerateSerializationAssemblies>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <Import Project="..\VarletCore\VarletCore.projitems" Label="Shared" />

</Project>
