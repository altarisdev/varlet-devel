{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/source/VarletCli.csproj",
                "--nologo", "-c", "Release", "-o", "packages/cli"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Publish Project",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/source/VarletCli.csproj",
                "--nologo", "--runtime", "win10-x64",
                "-c", "Release", "-o", "packages/cli"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Watch Application",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/source/VarletCli.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
