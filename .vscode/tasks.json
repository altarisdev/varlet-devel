{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/source/VarletCli.csproj",
                "--nologo",
                "-c",
                "Release",
                "-o",
                "output/cli"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Publish Project",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/source/VarletCli.csproj",
                "--nologo",
                "--runtime",
                "win10-x64",
                "-c",
                "Release",
                "/p:PublishSingleFile=true",
                "/p:PublishTrimmed=true",
                "-o",
                "output/cli"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Setup",
            "command": "C:\\Program Files (x86)\\Inno Setup 6\\ISCC.exe",
            "type": "process",
            "args": [
                "${workspaceFolder}/_buildscripts/setup-script.iss"
            ],
            "problemMatcher": []
        }
    ]
}
